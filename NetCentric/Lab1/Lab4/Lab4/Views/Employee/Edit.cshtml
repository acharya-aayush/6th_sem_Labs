@model Lab4.Models.Employee
<h2>Edit Employee</h2>
<form method="post">
<input name="Id" type="hidden" value="@Model.Id" />
<input name="Name" value="@Model.Name" class="form-control mb-2" />
<input name="Email" value="@Model.Email" class="form-control mb-2" />
<input name="Position" value="@Model.Position" class="form-control mb-2" />
<input name="Age" type="number" value="@Model.Age" class="form-control mb-2" />
<input name="Salary" type="number" step="0.01" value="@Model.Salary" class="form-control mb-2" />
<button class="btn btn-primary">Update</button> <a href="/Employee" class="btn btn-secondary">Cancel</a>
</form>