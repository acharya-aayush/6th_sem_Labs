@model Lab4.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this employee? This action cannot be undone.
                    </div>
                    
                    <div class="text-center mb-4">
                        <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 1.5rem;">
                            @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                        </div>
                        <h4 class="mt-3">@Model.FullName</h4>
                        <p class="text-muted">@Model.Position</p>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                            <dd>@Html.DisplayFor(model => model.Email)</dd>
                        </div>
                        <div class="col-sm-6">
                            <dt>Department</dt>
                            <dd>@Html.DisplayFor(model => model.Department)</dd>
                        </div>
                        <div class="col-sm-6">
                            <dt>@Html.DisplayNameFor(model => model.Salary)</dt>
                            <dd>@Model.Salary.ToString("C")</dd>
                        </div>
                        <div class="col-sm-6">
                            <dt>@Html.DisplayNameFor(model => model.HireDate)</dt>
                            <dd>@Model.HireDate.ToString("MMM dd, yyyy")</dd>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        <input asp-for="Id" type="hidden" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Employee
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>