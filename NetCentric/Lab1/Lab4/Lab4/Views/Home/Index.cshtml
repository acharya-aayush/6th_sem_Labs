@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Employee Management System</h1>
    <p class="lead">Manage your company's employees with ease using this comprehensive employee management system.</p>
    
    <div class="row mt-5">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Employee Management</h5>
                    <p class="card-text">Add, edit, view, and delete employee records with comprehensive validation.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Manage Employees
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <h3>Features</h3>
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center p-3">
                        <i class="bi bi-plus-circle text-success" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Add Employees</h6>
                        <small class="text-muted">Create new employee records with validation</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center p-3">
                        <i class="bi bi-pencil text-warning" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Edit Information</h6>
                        <small class="text-muted">Update existing employee details</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center p-3">
                        <i class="bi bi-eye text-info" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">View Details</h6>
                        <small class="text-muted">View comprehensive employee information</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center p-3">
                        <i class="bi bi-trash text-danger" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Remove Employees</h6>
                        <small class="text-muted">Safely delete employee records</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
